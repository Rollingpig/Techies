  body
    #start-menu-screen.active.screen
      .container
        h1#game-title Your Game Title
        button#play-button Play
        button#settings-button Settings
        button#instructions-button Instructions
    #settings-screen.screen
      .container
        button#setting-back-button.main-menu-button Back
    #instructions-screen.screen
      .container
        button#instructions-back-button.main-menu-button Back
    #game-container.screen: .container
    #game-over-screen.screen
      .container
        #game-over-message
        button#play-again-button Play Again
        button#game-over-main-menu-button.main-menu-button Main Menu
    audio#background-music autoplay=true loop=true
      source src="background-music.mp3" type="audio/mpeg"
    audio#start-game-sound
      source src="start-game-sound.mp3" type="audio/mpeg"

    /! Extra audio tags for sound effects

    script
      include game.js

